<div class="flexBox">
    <div id="selectedChar" class="char">
        <div class="nameHolder">
            <h1>{{character.name}}</h1>
        </div>
        <div>
            <img id="characterImg" src="/../{{character.image}}" alt="{{character.name}}">
        </div>
        <div class="statsHolder">
            <p class="stats" id="characterHp" data-val="{{character.hp}}">Character HP: {{character.hp}}</p>
            <div class="btnContainer">
                <button class="signBtn" id="character-attack1" data-val="{{character.attack_points_1}}"
                    data-clicked=false>Attack 1:
                    {{character.attack_points_1}}</button>
                <button class="signBtn" id="character-attack2" data-val="{{character.attack_points_2}}"
                    data-clicked=false>Attack 2:
                    {{character.attack_points_2}}</button>
                    <div id="status"></div>
                    <div id="update"></div>
            </div>
        </div>
    </div>
    <div id="oppChar" class="char">
        <div class="nameHolder">
            <h1 id="opponentName" data-val="{{opponent.name}}">{{opponent.name}}</h1>
        </div>  
        <div class="img">
            <img id="opponentImg" src="/../{{opponent.image}}" alt="{{opponent.name}}">
        </div>
        <div class="statsHolder">
            <p class="oppStats" id="opponentHp" data-val={{opponent.hp}}>Opp HP: {{opponent.hp}}</p>
            {{!-- I added these so I can pass the hit values in to app.js--}}
            <p id= "opponent-attack1" data-val="{{opponent.attack_points_1}}"></p>
            <p id="opponent-attack2" data-val="{{opponent.attack_points_2}}"></p>
            <p class="score">Score: 0</p>
            <div id="oppUpdate"></div>
        </div>
    </div>
</div>